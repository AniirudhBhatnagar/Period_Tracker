# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Required: Google Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Required: Session secret for Express sessions
SESSION_SECRET=your_session_secret_here

# Optional: MongoDB connection string (if using MongoDB)
MONGO_URI=mongodb://localhost:27017/periodtracker

# Optional: Google OAuth credentials (if using Google OAuth)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Optional: JWT Secret for token signing
JWT_SECRET=your_jwt_secret_here

# Optional: Frontend client URL for OAuth redirects (defaults to http://localhost:3000)
CLIENT_URL=http://localhost:3000
